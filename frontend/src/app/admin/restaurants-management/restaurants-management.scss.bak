.restaurants-management {
  padding: 24px;

  .page-header {
    .page-title {
      color: #2c3e50;
      margin-bottom: 8px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 12px;

      i {
        color: #3498db;
      }
    }

    .page-subtitle {
      color: #7f8c8d;
      margin-bottom: 0;
    }

    .header-actions {
      display: flex;
      gap: 12px;
      align-items: center;
    }
  }

  .restaurant-stats {
    margin-bottom: 32px;

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;

      .stat-card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        border-left: 4px solid #3498db;
        transition: all 0.3s ease;

        &:hover {
          transform: translateY(-2px);
          box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
        }

        .stat-header {
          display: flex;
          justify-content: space-between;
          align-items: center;
          margin-bottom: 16px;

          .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;

            &.pending {
              background: linear-gradient(135deg, #f39c12, #e67e22);
            }

            &.total {
              background: linear-gradient(135deg, #3498db, #2980b9);
            }

            &.approved {
              background: linear-gradient(135deg, #27ae60, #229954);
            }

            &.rejected {
              background: linear-gradient(135deg, #e74c3c, #c0392b);
            }
          }
        }

        .stat-value {
          font-size: 2rem;
          font-weight: 700;
          color: #2c3e50;
          margin-bottom: 8px;
          line-height: 1;
        }

        .stat-label {
          color: #7f8c8d;
          font-weight: 500;
        }
      }
    }
  }

  .restaurants-grid {
    .grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;

      .restaurant-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        overflow: hidden;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;

        &:hover {
          transform: translateY(-5px);
          box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }



        // Header with avatar and basic info
        .restaurant-header {
          padding: 2rem 2rem 1rem;
          display: flex;
          align-items: center;
          gap: 1rem;
          border-bottom: 1px solid #f1f5f9;

          .restaurant-avatar {
            width: 4rem;
            height: 4rem;
            border-radius: 16px;
            background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            flex-shrink: 0;
          }

          .restaurant-info {
            flex: 1;

            .restaurant-name {
              font-size: 1.4rem;
              font-weight: 700;
              color: #2d3748;
              margin-bottom: 0.25rem;
            }

            .owner-name {
              color: #718096;
              margin-bottom: 0.75rem;
              font-size: 0.95rem;
            }

            .status-badges {
              display: flex;
              gap: 0.5rem;
              flex-wrap: wrap;

              .badge {
                padding: 0.4rem 0.8rem;
                border-radius: 12px;
                font-weight: 600;
                font-size: 0.8rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;

                &.bg-success {
                  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%) !important;
                  color: #065f46;
                }

                &.bg-warning {
                  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%) !important;
                  color: #92400e;
                }

                &.bg-secondary {
                  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%) !important;
                  color: #4a5568;
                }
              }
            }
          }
        }

        // Details section
        .restaurant-details {
          padding: 1.5rem 2rem;
          flex: 1;

          .detail-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            color: #4a5568;
            font-size: 0.95rem;

            i {
              color: #ff6b35;
              font-size: 1rem;
              width: 18px;
              text-align: center;
              flex-shrink: 0;
            }

            span {
              flex: 1;
              word-break: break-word;
            }

            &:last-child {
              margin-bottom: 0;
            }
          }
        }

        // Stats section
        .restaurant-stats {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 1rem;
          padding: 1.5rem 2rem;
          background: #f8fafc;
          border-top: 1px solid #e2e8f0;

          .stat-item {
            text-align: center;

            .stat-value {
              font-size: 1.3rem;
              font-weight: 700;
              color: #2d3748;
              margin-bottom: 0.25rem;
            }

            .stat-label {
              font-size: 0.85rem;
              color: #718096;
              font-weight: 500;
            }
          }
        }

        // Business info section
        .business-info {
          padding: 1rem 2rem;
          background: #fef7f0;
          border-top: 1px solid #fed7aa;

          .detail-item {
            margin-bottom: 0;
          }
        }

        // Actions section
        .restaurant-actions {
          display: flex;
          gap: 0.75rem;
          padding: 1.5rem 2rem;
          background: white;
          border-top: 1px solid #f1f5f9;

          .btn {
            flex: 1;
            padding: 0.75rem 1rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;

            &.btn-success {
              background: linear-gradient(135deg, #10b981 0%, #059669 100%);
              color: white;
              border-color: #10b981;

              &:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4);
              }
            }

            &.btn-warning {
              background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
              color: white;
              border-color: #f59e0b;

              &:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(245, 158, 11, 0.4);
              }
            }

            &.btn-outline-primary {
              color: #ff6b35;
              border-color: #ff6b35;
              background: white;

              &:hover {
                background: #ff6b35;
                color: white;
                transform: translateY(-2px);
              }
            }

            &.btn-outline-warning {
              color: #f59e0b;
              border-color: #f59e0b;
              background: white;

              &:hover {
                background: #f59e0b;
                color: white;
                transform: translateY(-2px);
              }
            }

            &.btn-outline-danger {
              color: #dc2626;
              border-color: #dc2626;
              background: white;

              &:hover {
                background: #dc2626;
                color: white;
                transform: translateY(-2px);
              }
            }

            i {
              font-size: 0.9rem;
            }
          }
        }
      }
    }
  }

  .restaurants-table {
    .card {
      background: white;
      border: none;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
      border: 1px solid rgba(0, 0, 0, 0.05);
      overflow: hidden;

      .card-header {
        background: #f8fafc;
        border: none;
        padding: 2rem 2.5rem;
        border-bottom: 1px solid #e2e8f0;

        .table-header {
          display: flex;
          justify-content: space-between;
          align-items: center;

          .table-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2d3748;
            display: flex;
            align-items: center;

            i {
              color: #ff6b35;
              margin-right: 1rem;
              font-size: 1.4rem;
            }
          }

          .view-toggle {
            display: flex;
            gap: 0.5rem;

            .btn {
              padding: 0.5rem 1rem;
              border-radius: 8px;
              border: 2px solid #e2e8f0;
              background: white;
              color: #6c757d;
              transition: all 0.3s ease;

              &.active {
                background: #ff6b35;
                border-color: #ff6b35;
                color: white;
              }

              &:hover:not(.active) {
                border-color: #cbd5e0;
                color: #ff6b35;
              }
            }
          }
        }
      }

      .table-responsive {
        background: white;

        .table {
          margin: 0;

          thead {
            th {
              background: #f8fafc;
              border-bottom: 2px solid #e2e8f0;
              color: #2d3748;
              font-weight: 700;
              font-size: 0.95rem;
              text-transform: uppercase;
              letter-spacing: 0.5px;
              padding: 1.5rem 1.25rem;
              border-top: none;
            }
          }

          tbody {
            tr {
              border-bottom: 1px solid #f1f5f9;
              transition: all 0.3s ease;

              &:hover {
                background: #f8fafc;
                transform: scale(1.01);
              }

              td {
                padding: 1.5rem 1.25rem;
                vertical-align: middle;
                border-top: none;
                color: #4a5568;
                font-weight: 500;

                .restaurant-profile {
                  display: flex;
                  align-items: center;
                  gap: 1rem;

                  .restaurant-avatar {
                    width: 3rem;
                    height: 3rem;
                    border-radius: 12px;
                    background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    color: white;
                    font-weight: 700;
                    font-size: 1.2rem;
                  }

                  .restaurant-details {
                    .restaurant-name {
                      font-weight: 700;
                      color: #2d3748;
                      margin-bottom: 0.25rem;
                    }

                    .restaurant-cuisine {
                      color: #718096;
                      font-size: 0.9rem;
                    }
                  }
                }

                .contact-info {
                  .phone {
                    font-weight: 600;
                    color: #2d3748;
                    margin-bottom: 0.25rem;
                  }

                  .email {
                    color: #718096;
                    font-size: 0.9rem;
                  }
                }

                .location-info {
                  .address {
                    color: #4a5568;
                    font-size: 0.95rem;
                    margin-bottom: 0.25rem;
                  }

                  .coordinates {
                    color: #718096;
                    font-size: 0.85rem;
                  }
                }

                .rating-info {
                  display: flex;
                  align-items: center;
                  gap: 0.5rem;

                  .rating-stars {
                    color: #fbbf24;
                  }

                  .rating-value {
                    font-weight: 600;
                    color: #2d3748;
                  }

                  .rating-count {
                    color: #718096;
                    font-size: 0.9rem;
                  }
                }

                .status-badge {
                  padding: 0.5rem 1rem;
                  border-radius: 20px;
                  font-weight: 600;
                  font-size: 0.85rem;
                  text-transform: uppercase;
                  letter-spacing: 0.5px;

                  &.active {
                    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
                    color: #065f46;
                  }

                  &.inactive {
                    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
                    color: #92400e;
                  }

                  &.pending {
                    background: linear-gradient(135deg, #e9d5ff 0%, #d8b4fe 100%);
                    color: #6b21a8;
                  }
                }

                .actions-dropdown {
                  .dropdown-toggle {
                    background: transparent;
                    border: 2px solid #e2e8f0;
                    color: #ff6b35;
                    padding: 0.5rem 1rem;
                    border-radius: 10px;
                    font-weight: 600;
                    transition: all 0.3s ease;

                    &:hover {
                      background: #ff6b35;
                      color: white;
                      border-color: #ff6b35;
                    }

                    &::after {
                      margin-left: 0.5rem;
                    }
                  }

                  .dropdown-menu {
                    border: none;
                    border-radius: 12px;
                    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
                    padding: 0.5rem;

                    .dropdown-item {
                      border-radius: 8px;
                      padding: 0.75rem 1rem;
                      font-weight: 500;
                      transition: all 0.3s ease;

                      &:hover {
                        background: #f8fafc;
                        color: #ff6b35;
                      }

                      i {
                        margin-right: 0.75rem;
                        width: 16px;
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }

  .loading-state {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 5rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);

    .spinner-border {
      width: 4rem;
      height: 4rem;
      border-width: 0.4rem;
      color: #ff6b35;
    }

    .loading-text {
      margin-left: 2rem;
      color: #718096;
      font-size: 1.2rem;
      font-weight: 500;
    }
  }

  .empty-state {
    text-align: center;
    padding: 5rem 2rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);

    .empty-icon {
      font-size: 4rem;
      color: #cbd5e0;
      margin-bottom: 2rem;
    }

    .empty-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 1rem;
    }

    .empty-description {
      color: #718096;
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .empty-action {
      .btn {
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
        border: none;
        color: white;
        transition: all 0.3s ease;

        &:hover {
          transform: translateY(-2px);
          box-shadow: 0 8px 20px rgba(255, 107, 53, 0.4);
        }
      }
    }
  }

  .pagination-wrapper {
    margin-top: 2rem;
    display: flex;
    justify-content: center;

    .pagination {
      .page-item {
        margin: 0 0.25rem;

        .page-link {
          border: 2px solid #e2e8f0;
          color: #ff6b35;
          padding: 0.75rem 1rem;
          border-radius: 10px;
          font-weight: 600;
          transition: all 0.3s ease;

          &:hover {
            background: #ff6b35;
            color: white;
            border-color: #ff6b35;
            transform: translateY(-2px);
          }
        }

        &.active .page-link {
          background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
          border-color: #ff6b35;
          color: white;
        }

        &.disabled .page-link {
          background: #f8fafc;
          color: #cbd5e0;
          border-color: #e2e8f0;
        }
      }
    }
  }
}

// Responsive design
@media (max-width: 1024px) {
  .restaurants-management {
    .filters-section .card .filters-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    .restaurants-stats .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    .restaurants-grid .grid-container {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
  }
}

@media (max-width: 768px) {
  .restaurants-management {
    padding: 1rem;

    .page-header {
      padding: 2rem;
      text-align: center;

      .page-title {
        font-size: 2rem;
      }

      .header-actions {
        justify-content: center;
        flex-wrap: wrap;

        .btn {
          flex: 1;
          min-width: 150px;
        }
      }
    }

    .filters-section .card .filters-grid {
      grid-template-columns: 1fr;

      .filter-actions {
        .btn {
          width: 100%;
        }
      }
    }

    .restaurants-stats .stats-grid {
      grid-template-columns: 1fr;
    }

    .restaurants-grid .grid-container {
      grid-template-columns: 1fr;

      .restaurant-card {
        .restaurant-actions {
          flex-direction: column;

          .btn {
            width: 100%;
          }
        }
      }
    }

    .restaurants-table .table-responsive {
      .table {
        font-size: 0.9rem;

        thead th,
        tbody td {
          padding: 1rem 0.75rem;
        }

        .restaurant-profile {
          flex-direction: column;
          align-items: flex-start !important;
          gap: 0.75rem !important;
        }
      }
    }
  }
}

// Modal styles for restaurant actions
.modal {
  .modal-dialog {
    .modal-content {
      border: none;
      border-radius: 20px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
      overflow: hidden;

      .modal-header {
        background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
        color: white;
        border: none;
        padding: 2rem;

        .modal-title {
          font-weight: 700;
          font-size: 1.4rem;
          display: flex;
          align-items: center;
          gap: 0.75rem;

          i {
            font-size: 1.3rem;
          }
        }

        .btn-close {
          background: none;
          border: none;
          color: white;
          opacity: 0.8;
          font-size: 1.5rem;

          &:hover {
            opacity: 1;
          }
        }
      }

      .modal-body {
        padding: 2rem;
        background: white;

        .form-group {
          margin-bottom: 1.5rem;

          .form-label {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.75rem;
            font-size: 1rem;
          }

          .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            transition: all 0.3s ease;

            &:focus {
              border-color: #ff6b35;
              box-shadow: 0 0 0 4px rgba(255, 107, 53, 0.1);
            }
          }

          textarea.form-control {
            min-height: 120px;
            resize: vertical;
          }
        }

        .alert {
          border-radius: 12px;
          border: none;
          padding: 1.25rem;

          &.alert-warning {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
          }

          &.alert-danger {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
          }

          &.alert-info {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
          }
        }
      }

      .modal-footer {
        background: #f8fafc;
        border: none;
        padding: 1.5rem 2rem;

        .btn {
          padding: 0.875rem 2rem;
          border-radius: 12px;
          font-weight: 600;
          border: 2px solid transparent;
          transition: all 0.3s ease;
          display: flex;
          align-items: center;
          gap: 0.5rem;

          &.btn-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            border-color: #10b981;

            &:hover {
              transform: translateY(-2px);
              box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4);
            }
          }

          &.btn-danger {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            color: white;
            border-color: #dc2626;

            &:hover {
              transform: translateY(-2px);
              box-shadow: 0 8px 20px rgba(220, 38, 38, 0.4);
            }
          }

          &.btn-secondary {
            background: #6c757d;
            color: white;
            border-color: #6c757d;

            &:hover {
              background: #5a6268;
              border-color: #5a6268;
              transform: translateY(-2px);
            }
          }

          i {
            font-size: 0.9rem;
          }
        }
      }
    }
  }
}