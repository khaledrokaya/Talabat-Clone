.users-management {
  padding: 2rem;
  background: #f8fafc;
  min-height: 100vh;

  .page-header {
    margin-bottom: 3rem;
    padding: 2.5rem;
    background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
    border-radius: 20px;
    color: white;
    box-shadow: 0 15px 35px rgba(255, 107, 53, 0.3);

    .page-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;

      i {
        margin-right: 1rem;
        font-size: 2.2rem;
      }
    }

    .page-subtitle {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.2rem;
      margin: 0;
    }

    .header-actions {
      display: flex;
      gap: 1rem;

      .btn {
        padding: 0.875rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        border: 2px solid rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.15);
        color: white;
        transition: all 0.3s ease;

        &:hover {
          background: rgba(255, 255, 255, 0.25);
          border-color: rgba(255, 255, 255, 0.5);
          transform: translateY(-2px);
        }

        i {
          margin-right: 0.5rem;
        }
      }
    }
  }

  .filters-section {
    margin-bottom: 2rem;

    .card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
      border: 1px solid rgba(0, 0, 0, 0.05);

      .card-body {
        padding: 2rem;
      }
    }

    .search-box {
      position: relative;

      i {
        position: absolute;
        left: 1.2rem;
        top: 50%;
        transform: translateY(-50%);
        color: #ff6b35;
        font-size: 1.1rem;
      }

      .form-control {
        padding: 1rem 1.2rem 1rem 3.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: #f8fafc;

        &:focus {
          border-color: #ff6b35;
          box-shadow: 0 0 0 4px rgba(255, 107, 53, 0.1);
          background: white;
        }
      }
    }

    .form-select {
      padding: 1rem 1.2rem;
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      background: #f8fafc;
      transition: all 0.3s ease;

      &:focus {
        border-color: #ff6b35;
        box-shadow: 0 0 0 4px rgba(255, 107, 53, 0.1);
        background: white;
      }
    }

    .results-count {
      margin-top: 1rem;
      padding-top: 1rem;
      border-top: 1px solid #f1f5f9;
    }
  }

  .loading-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);

    .spinner-border {
      width: 3rem;
      height: 3rem;
      border-width: 0.3rem;
      color: #ff6b35;
    }
  }

  .alert {
    border-radius: 15px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    border: none;
    font-weight: 500;

    &.alert-danger {
      background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
      color: #7f1d1d;
    }
  }

  .users-table-section {
    .card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      border: 1px solid rgba(0, 0, 0, 0.05);

      .table {
        margin: 0;

        thead th {
          padding: 1.5rem 1.2rem;
          font-weight: 700;
          color: #2d3748;
          border: none;
          background: #f8f9fa;
          border-bottom: 2px solid #ff6b35;
        }

        tbody tr {
          transition: all 0.3s ease;
          border-bottom: 1px solid #f1f5f9;

          &:hover {
            background: #f8fafc;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 107, 53, 0.1);
          }

          td {
            padding: 1.5rem 1.2rem;
            border: none;
            vertical-align: middle;
          }
        }

        .user-info {
          display: flex;
          align-items: center;
          gap: 1rem;

          .user-avatar {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
          }

          .user-details {
            .user-name {
              font-weight: 600;
              color: #2d3748;
              margin-bottom: 0.25rem;
            }

            .user-id {
              font-size: 0.85rem;
              color: #718096;
              background: #f7fafc;
              padding: 0.2rem 0.5rem;
              border-radius: 6px;
              font-family: monospace;
            }
          }
        }

        .verification-badge,
        .role-badge,
        .status-badge {
          padding: 0.5rem 1rem;
          border-radius: 20px;
          font-size: 0.85rem;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.5px;

          &.bg-success {
            background: #28a745;
            color: white;
          }

          &.bg-danger {
            background: #dc3545;
            color: white;
          }

          &.bg-warning {
            background: #ffc107;
            color: #212529;
          }

          &.bg-primary {
            background: #ff6b35;
            color: white;
          }

          &.bg-info {
            background: #17a2b8;
            color: white;
          }

          &.bg-secondary {
            background: #6c757d;
            color: white;
          }
        }

        .action-buttons {
          display: flex;
          gap: 0.5rem;

          .btn {
            padding: 0.5rem;
            border-radius: 8px;
            border: 2px solid;
            transition: all 0.3s ease;

            &.btn-outline-warning {
              color: #ffc107;
              border-color: #ffc107;

              &:hover {
                background: #ffc107;
                color: #212529;
                transform: translateY(-1px);
              }
            }

            &.btn-outline-danger {
              color: #dc3545;
              border-color: #dc3545;

              &:hover {
                background: #dc3545;
                color: white;
                transform: translateY(-1px);
              }
            }
          }
        }
      }
    }
  }

  .empty-state {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);

    .empty-state-content {
      text-align: center;

      .empty-icon {
        font-size: 4rem;
        color: #e2e8f0;
        margin-bottom: 1.5rem;
      }

      h4 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 1rem;
      }

      p {
        color: #718096;
        margin-bottom: 2rem;
      }

      .btn {
        background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;

        &:hover {
          transform: translateY(-2px);
          box-shadow: 0 8px 20px rgba(255, 107, 53, 0.4);
        }
      }
    }
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    padding: 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);

    .pagination-info {
      margin-right: 2rem;
      color: #718096;
      font-weight: 500;
    }

    .pagination-controls {
      display: flex;
      gap: 0.5rem;

      .btn {
        padding: 0.5rem 1rem;
        border: 2px solid #e2e8f0;
        background: white;
        color: #4a5568;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-weight: 500;

        &:hover:not(:disabled) {
          border-color: #667eea;
          background: #667eea;
          color: white;
          transform: translateY(-1px);
        }

        &:disabled {
          opacity: 0.5;
          cursor: not-allowed;
        }

        &.active {
          background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
          border-color: #667eea;
          color: white;
        }
      }
    }
  }
}

// Responsive design
@media (max-width: 768px) {
  .users-management-container {
    padding: 1rem;

    .page-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;

      .header-actions {
        width: 100%;
        justify-content: center;
      }
    }

    .filters-section {
      padding: 1.5rem;

      .filter-controls {
        grid-template-columns: 1fr;
      }
    }

    .users-table-section {
      .table-responsive {
        font-size: 0.85rem;
      }

      .action-buttons {
        flex-direction: column;
        gap: 0.5rem;
      }
    }

    .pagination {
      flex-direction: column;
      gap: 1rem;

      .pagination-controls {
        justify-content: center;
        flex-wrap: wrap;
      }
    }
  }
}